<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th><%= Book.human_attribute_name('title') %>:</th>
      <th><%= Book.human_attribute_name('memo') %></th>
      <th><%= Book.human_attribute_name('author') %></th>
      <th><%= Book.human_attribute_name('picture') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.memo %></td>
        <td><%= book.author %></td>
        <td><%= book.picture %></td>
        <td><%= link_to Book.human_attribute_name('show'), book %></td>
        <td><%= link_to Book.human_attribute_name('edit'), edit_book_path(book) %></td>
        <td><%= link_to Book.human_attribute_name('destroy'), book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to Book.human_attribute_name('new book'), new_book_path %>
