<p id="notice"><%= notice %></p>

<h1 class="main_title"><%= Book.model_name.human %></h1>
<table class="main_table">
  <thead>
    <tr>
      <th><%= Book.human_attribute_name(:title) %></th>
      <th><%= Book.human_attribute_name(:memo) %></th>
      <th><%= Book.human_attribute_name(:author) %></th>
      <th><%= Book.human_attribute_name(:picture) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.memo %></td>
        <td><%= book.author %></td>
        <td><%= book.picture %></td>
        <td class="nowrap"><%= link_to t('views.common.show'), book %></td>
        <td class="nowrap"><%= link_to t('views.common.edit'), edit_book_path(book) %></td>
        <td class="nowrap"><%= link_to t('views.common.destroy'), book, method: :delete, data: { confirm: t('views.common.delete_confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="pagination"><%= paginate @books %></div>
<div class="actions"><%= link_to t('views.common.new'), new_book_path, { class: "btn" } %></div>
