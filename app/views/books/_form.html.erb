<%= form_with(model: book, local: true) do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %><%= t :error_explanation %> :</h2>

      <ul>
        <% book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label (t :title) %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label (t :memo) %>
    <%= form.text_area :memo %>
  </div>

  <div class="field">
    <%= form.label (t :author) %>
    <%= form.text_field :author %>
  </div>

  <div class="field">
    <%= form.label (t :picture) %>
    <%= form.file_field :picture %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
