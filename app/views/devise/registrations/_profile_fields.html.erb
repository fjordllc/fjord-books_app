<div class="field">
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>

<div class="field">
  <%= f.label :postal_code %>
  <%= f.text_field :postal_code %>
</div>

<div class="field">
  <%= f.label :address %>
  <%= f.text_field :address %>
</div>

<div class="field">
  <%= f.label :self_introduction %>
  <%= f.text_area :self_introduction %>
</div>

<div class="field">
  <%= f.label :avatar %>
  <%= image_tag @user.avatar, size: "50x50" if @user.avatar.attached? %>
</div>

<div class="field">
  <%= f.file_field :avatar, accept: "image/png, image/jpeg, image/gif" %>
</div>

