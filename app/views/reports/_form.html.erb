<h2>コメント</h2>
<% commentable.comments.each do |comment| %>
  <p><%= comment.content %></p>
  <p><%= comment.created_at %></p>
<% end %>

<%= form_with(model: [commentable, Comment.new]) do |form| %>
  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
