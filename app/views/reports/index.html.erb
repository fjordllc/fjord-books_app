<h1><%= Report.model_name.human %></h1>

<table>
  <thead>
    <tr>
      <th><%= Report.human_attribute_name(:title) %></th>
      <th><%= Report.human_attribute_name(:content) %></th>
      <th><%= Report.human_attribute_name(:poster) %></th>
      <th><%= Report.human_attribute_name(:posted_at) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.title %></td>
        <td><%= report.content %></td>
        <% if User.find(report.poster_id).name.empty? %>
          <td><%= User.find(report.poster_id).email %></td>
        <% else %>
          <td><%= User.find(report.poster_id).name %></td>
        <% end %>
        <td><%= report.created_at.strftime('%Y/%-m/%-d %-H:%M') %></td>
        <td><%= link_to t('views.common.show'), report %></td>
        <% if User.find(report.poster_id) == current_user %>
          <td><%= link_to t('views.common.edit'), edit_report_path(report) %></td>
          <td><%= link_to t('views.common.destroy'), report, method: :delete, data: { confirm: t('views.common.delete_confirm') } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('views.common.new'), new_report_path %>
